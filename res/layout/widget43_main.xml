<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"    
    android:padding="7dp"
    
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/widget43_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        
        
        <ImageView
        android:id="@+id/widget_43_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_alignParentRight="true" 
        android:layout_alignParentTop="true"   
        
        android:src="@drawable/d411" />

    <TextView
        android:id="@+id/widget_43_city"
        android:layout_width="290dp"
        android:layout_height="60dp"
        
        android:gravity="top|left"
        
        
        
        android:layout_alignParentLeft="true" 
        android:layout_alignParentTop="true"   
        
        android:textSize="50dp"
        android:textColor="#ffffff"  
        
        android:shadowColor="#000000"
        android:shadowRadius="3"
        
        android:layout_marginLeft="5dp"     
        
        android:text="Киев" />

    <TextView
        android:id="@+id/widget_43_weather_desc"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        
        android:gravity="bottom"
        
        android:layout_alignParentLeft="true" 
        android:layout_alignParentTop="true"   
        
        android:textSize="35dp"
        android:textColor="#ffffff" 
        
        android:layout_marginTop="50dp" 
        android:layout_marginLeft="5dp" 
        
        android:shadowColor="#000000"
        android:shadowRadius="2"
        
        android:typeface="monospace"
        
        android:text="Ясно аж ой" />

    <TextView
        android:id="@+id/widget_43_icon_w_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_alignParentLeft="true" 
        android:layout_alignParentTop="true"   
        
        android:textSize="20dp"
        android:textColor="#ffffff"  
        
        android:shadowColor="#000000"
        android:shadowRadius="2"
        
        android:layout_marginTop="145dp" 
        android:layout_marginLeft="5dp"        
        
        android:text="Вланость 70%, Ветер 340*, 10 м/с" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_alignParentLeft="true" 
        android:layout_alignParentBottom="true"    
        
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"       
        >

        <TextView
            android:id="@+id/widget_43_temp"
            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:text="+40"            
            android:textColor="#ffffff"
            
            android:lineSpacingExtra="0dp"
            
            android:layout_marginBottom="-13dp"
            
            android:shadowColor="#000000"
        	android:shadowRadius="3"
        	
        	android:typeface="monospace"
            
            android:textSize="75dp" />
        
        <TextView
            android:id="@+id/widget_43_n_temp"
            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:shadowColor="#000000"
        	android:shadowRadius="2"
            
            android:layout_marginLeft="10dp"   
            
            android:typeface="monospace"    
            
            android:text="+40"            
            android:textSize="34dp"
            android:textColor="#eeeeee"  
            
            />

    </LinearLayout>
        
        
        
    </RelativeLayout>

    

    <LinearLayout
        android:id="@+id/update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        
        android:gravity="right"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:textSize="11dp"
        	android:textColor="#ffffff" 
        	
        	android:shadowColor="#000000"
        	android:shadowRadius="1"
        	
            android:text="@string/updated" />

        <TextView
            android:id="@+id/widget_43_update_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:shadowColor="#000000"
        android:shadowRadius="1"
            
            android:textSize="11dp"
        	android:textColor="#ffffff" 
            
            android:text="Пн 13-44 22:01" />

        <ImageView
            android:id="@+id/widget_43_update_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            
            android:layout_marginTop="5dp"
            
            android:src="@drawable/refresh_w" />
        
    </LinearLayout>
    
</RelativeLayout>








